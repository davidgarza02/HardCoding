<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@color/cardview_dark_background"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_below="@+id/tvprice"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="X tokens"/>
        <TextView
            android:id="@+id/tvdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_below="@id/tvtitle"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginBottom="10dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean ornare mi a est ornare, nec rhoncus ante efficitur. Nulla rhoncus, tellus efficitur porttitor ornare, purus metus ullamcorper nunc, et sagittis velit purus in mi. Nulla et massa nunc. Suspendisse bibendum quis mi sed malesuada. Vestibulum ultrices mauris quis ultricies auctor. Donec eget pulvinar dolor. Praesent auctor odio quis ex tincidunt lobortis. Duis a aliquet neque. Quisque egestas nisl vel tellus cursus finibus. Vivamus feugiat magna vel mauris lacinia aliquet. Sed pellentesque laoreet libero. Quisque sit amet hendrerit ex, a tempus odio. Sed vitae ligula neque. Morbi sollicitudin ultricies mauris nec pulvinar. In tempor malesuada lectus eu laoreet."/>
        <Button
            android:id="@+id/btnbuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_below="@id/tvdescription"
            android:layout_alignParentRight="true"
            android:minHeight="30dp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
